#include <iostream>
using namespace std;


int main() {
    setlocale(LC_ALL, "ru");
    float p;
    printf("Введите ставку по вкладу: ");
    cin >> p;
    int i = 0;
    double k = 1000;
    if ((p > 0) && (p < 25)) {
        for (k; k <= 1100; k += (float)k * (p / 100)) {
            i++;
        }
        printf("Итоговый размер вклада %g, месяцев прошло: %d", k, i);
    }
    else {
        printf("Введите еще раз");
    }
}
