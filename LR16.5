#include <iostream>
#include <ctime>
using namespace std;


int main()
{
    const int N = 20;
    int A[N];
    for (int i = 0; i < N; i++)
    {
        A[i] = 0 + rand() % 15;
        printf("%d\t", A[i]);
    }
    printf("\n\n");
    for (int i = 1; i < N; i += 2)
    {
        printf("%d\t", A[i]);
    }
    if (N % 2 == 0) {
        for (int i = N - 2; i >= 0; i -= 2)
        {
            printf("%d\t", A[i]);
        }
        return 0;
    }
    if (N % 2 != 0) {
        for (int i = N - 1; i >= 0; i -= 2)
        {
            printf("%d\t", A[i]);
        }
        return 0;
    }
}
