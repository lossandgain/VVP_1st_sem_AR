#include <iostream>
#include <cmath>

int main()
{
    int gr;
    float pi = 3.14, rad;
    setlocale(LC_ALL, "Rus");
    printf("Введите угол в градусах. Переведём его в радианы.\n");
    printf("Угол в градусах: ");
    scanf_s("%d", &gr);
    
    if((gr > 0) && (gr < 360))
    {
        rad = gr * pi / 180;
    }
    else
    {
        while(gr >= 360)
        {
            gr = gr - 360;
        }
        rad = gr * pi / 180;
    }
    
    printf("%d градусов = %f радианов.\n", gr, rad);
    return 0;
}
