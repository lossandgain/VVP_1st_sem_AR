#define _CRT_SECURE_NO_WARNINGS
#include <iostream>

int main()
{
    setlocale(LC_ALL, "ru");
    printf("Дано четырёхзначное число А.\n");
    printf("«Данное число читается одинаково слева направо и справа налево».\n");
    printf("Проверим на истинность это выражение.\n");
    
    int a, c1, c2, c3, c4; 
    
    printf("Число А: \n");
    scanf("%d", &a);
    
    c1 = a / 1000;
    c2 = (a - c1*1000) / 100;
    c3 = (a - c1*1000 - c2*100) / 10;
    c4 = a % 10;
    
    printf("%d %d %d %d\n", c1, c2, c3, c4);
    
    if ((c1 == c4) && (c2 == c3))
    {
        printf("Высказывание верно, число симметрично.\n");
        return 0;
    }
    else
    {
        printf("Высказывание неверно.\n");
        return 0;
    }
}
