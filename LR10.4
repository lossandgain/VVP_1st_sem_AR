    c3 = a % 10;
    
    printf("%d %d %d\n", c1, c2, c3);
    
    if ((c1 < c2) && (c2 < c3))
    {
        printf("Высказывание верно.\n");
        return 0;
    }
    else if ((c1 > c2) && (c2 > c3))
    {
        printf("Высказывание верно.\n");
        return 0;
    }
    else
    {
        printf("Высказывание неверно.\n");
        return 0;
    }
}
