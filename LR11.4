    {
        printf("Введены неверные. Введите еще раз.\n");
        return 0;
    }
    else
    {
        if ((x > 0) && (y > 0))
        {
            printf("Первая четверть.\n");
            return 0;
        }
        else if ((x > 0) && (y < 0))
        {
            printf("Червёртая четверть.\n");
            return 0;
        }
        else if ((x < 0) && (y > 0))
        {
            printf("Вторая четверть.\n");
            return 0;
        }
        else if ((x < 0) && (y < 0))
        {
            printf("Третья четверть.\n");
            return 0;
        }
    }
}
