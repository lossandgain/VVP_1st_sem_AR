#include <iostream>
#include <cmath>
using namespace std;


int main() {
    setlocale(LC_ALL, "ru");
    int n; 
    float a, sum; 
    printf("Введите целое число N: ");
    cin >> n;
    printf("Введите вещественное число A: ");
    cin >>a ;
    if (n > 0) {
        sum = 1;
        for (int i = 1; i <= n; i++) {
            sum += pow(a, i);
        }
        printf("Сумма цифр цепочки 1 + A + A^2 + A^3 + . . . + A^n равна %g", sum);
    }
    else {
        printf("Повторите ввод\n");
    }
}
