#define _CRT_SECURE_NO_WARNINGS
#include <iostream>

int main()
{
    setlocale(LC_ALL, "ru");
    int i, j, a1, b1, c1, a2, b2, c2;
    float x, y, dx, dy, dd;
    
    printf("Введите коэффициенты 1-го уравнения: ");
    scanf("%d %d %d", &a1, &b1, &c1);
    printf("Введите коэффициенты 2-го уравнения: ");
    scanf("%d %d %d", &a2, &b2, &c2);
    
    int arr[2][3] = {{a1,b1,c1},{a2,b2,c2}};

    for (int i=0; i<2; i++)
    {
        for (int j=0; j<3; j++)
        {
            dd = arr[0][0] * arr[1][1] - arr[0][1] * arr[1][0];
            dx = arr[0][2] * arr[1][1] - arr[1][2] * arr[0][1];
            dy = arr[0][0] * arr[1][2] - arr[1][0] * arr[0][2];
            
            printf("%.0f %.0f %.0f\n", dd, dx, dy);
            
            x = dx / dd;
            y = dy / dd;
    
            printf("Ответ: (%f, %f)\n", x, y);
            return 0;
        }
    }
}
